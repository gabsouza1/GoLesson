@model IEnumerable<Application.ViewModels.CursoViewModel>

<section class="col-lg-12">
    <div class="mb-2">
        <div class="d-flex justify-content-between align-items-center ml-1 mr-1 mb-3">
            <h1>Meus Cursos</h1>
        </div>
        <div class="row">
            @if (Model.Count() == 0)
            {
                <h4>Você ainda não adquiriu um curso...</h4>
            }

            @foreach (var item in Model)
            {
                <div class="card col-sm-3 m-4" style="max-width: 400px">
                    <img src="~/Resources/Capas/@item.Capa" class="card-img-top" alt="curso" />
                    <div class="card-body">
                        <h3 class="card-text text-success">@item.NomeCurso</h3>
                        <h5 class="card-text">@item.Criador</h5>
                        <h5 class="card-text">@string.Format("{0:C}", item.Valor)</h5>
                    </div>
                    <div class="card-footer">
                        <a asp-route-id="@item.Id" asp-action="Details" asp-controller="Cursos" class="btn btn-success">Detalhes</a>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
