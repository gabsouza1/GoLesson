<div class="container mt-5">
    <form method="post" asp-action="Save">
        <div class="form-group">
            <label for="Nome">Nome do curso:</label>
            <input type="text" id="Nome" name="Nome" class="form-control" />
            <span asp-validation-for="NomeCurso" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Descricao">Descricao do curso:</label>
            <input type="text" id="Descricao" name="Descricao" class="form-control" />
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Descricao">Preco do curso:</label>
            <input type="text" id="Descricao" name="Descricao" class="form-control" />
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Descricao">Matérias do curso:</label>
            <input type="text" id="Materias" name="Materias" class="form-control" />
            <span asp-validation-for="Materias" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Criar</button>
    </form>
</div>

